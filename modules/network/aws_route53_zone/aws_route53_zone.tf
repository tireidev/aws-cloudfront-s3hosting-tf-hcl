# ========================================================== #
# プロバイダ設定(AWS)
# ========================================================== #
provider "aws" {
  region = var.u_region
}

# ========================================================== #
#   4.1. ホストゾーン作成
# ========================================================== #
resource "aws_route53_zone" "primary" {
  name = var.u_domain_name
}

output "zone_id" {
    value = aws_route53_zone.primary.zone_id
}