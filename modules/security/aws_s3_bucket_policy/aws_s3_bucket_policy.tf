# ========================================================== #
# プロバイダ設定(AWS)
# ========================================================== #
provider "aws" {
  region = var.u_region
}

# ========================================================== #
#  2.4. S3バケットポリシー作成 (IAMポリシーとのマッピング)
# ========================================================== #
resource "aws_s3_bucket_policy" "s3_bucket_policy_mapping" {
  bucket = var.u_s3_bucket_id
  policy = var.u_s3_bucket_policy
}